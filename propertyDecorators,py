class Employee:
    def __init__(self, first, last, ) -> None:
        self.first = first
        self.last = last
    @property
    def fullname(self):
        return '{} {}'.format(self.first, self.last)

    @fullname.setter
    def fullname(self, name):
        first, last = name.split(' ')
        self.first = first
        self.last = last


    @fullname.deleter
    def fullname(self):
        print("Deleted Name")
        self.first = None
        self.last = None
    
    
    @property
    def email(self):
        return '{}.{}@company.com'.format(self.first, self.last)

    

emp_1 = Employee('Joe', 'Root')
emp_2 = Employee('Nitish', 'Kumar')

emp_1.first = 'Jim'
emp_1.fullname = 'Corey Schafer'

print(emp_1.first)
print(emp_1.email)
print(emp_1.fullname)

del emp_1.fullname